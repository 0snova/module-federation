{
  "name": "@osnova/module-federation",
  "version": "0.2.0",
  "description": "Module Federation standard utilities and interfaces",
  "author": "Alexander Snov",
  "license": "MIT",
  "private": false,
  "main": "dist/osnova-module-federation.cjs.js",
  "module": "dist/osnova-module-federation.esm.js",
  "browser": "dist/osnova-module-federation.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean:dist": "yarn rimraf dist",
    "build:types": "tsc -p . --emitDeclarationOnly",
    "build:code": "rollup -c",
    "build": "yarn clean:dist && yarn build:types && yarn build:code",
    "dev": "rollup -c -w",
    "lint": "eslint . --ext .js,.ts",
    "prepare:files": "osnova-build dist",
    "prepare:all": "yarn build && yarn prepare:files",
    "publish:npm": "cd dist && npm publish --access=public",
    "release": "yarn test && yarn prepare:all && npm run publish:npm",
    "_postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky install",
    "test": "jest --passWithNoTests"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@osnova/build-cli": "^0.2.0",
    "@osnova/build-library": "0.2.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@osnova/events": "^0.19.0"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
